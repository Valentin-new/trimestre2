package cuenta_titular;

import java.util.Scanner;

public class main {
	
	public main(String[] args) {
		// TODO Auto-generated method stub
		Scanner entrada = new Scanner(System.in);
		
		
		int opcion;
		
		do {
			//genero menu 
			System.out.println("eliga del 1 al 4");
			System.out.println("1. a√±adir nueva cuenta");
			System.out.println("2. eliminar cuenta");
			System.out.println("3. listar cuenta por titulo");
			System.out.println("4. Salir");
			
			opcion = entrada.nextInt();
			
			//implemento los casos
			switch (opcion) {
			case 1:
				anadirCueta();
				break;
			case 2:
				eliminarCuenta();
				break;
			case 3:
				listarCunta();
				break;
			case 4:
				System.out.println("Ha salido.");
				
			default:
				System.out.println("opcion no valida.");
				break;
				
			}while ()
			
		}
		
		//

	}

}
